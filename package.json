{
  "name": "no-bs-react-boilerplate",
  "version": "1.0.0",
  "description": "Simple Typescript boilerplate for writing React.js web apps",
  "main": "server.ts",
  "author": "Jean M. Lescure",
  "license": "Apache-2.0",
  "scripts": {
    "server": "ts-node -r dotenv/config server.ts",
    "build": "rm public/bundle* && rollup -c",
    "start": "yarn build && yarn server",
    "watch": "rollup -cw",
    "dev": "concurrently \"yarn watch\" \"NODE_ENV=development yarn server\" \"livereload ./public\""
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/express": "^4.17.8",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.27.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "livereload": "^0.9.1"
  }
}
